@{
	Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model List<ToDoAppWithDb.Models.ToDo>



<table class="table table-bordered">
	<thead>
		<tr>
			<th>Görevler</th>
			<th>Durum</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var t in Model)
		{
			<tr>
				<td>@t.Task</td>
				<td>@t.IsComp</td>
			</tr>
		}

	</tbody>
</table>

<div class="mt-5">
	<a href="/Todo/ToDoAdd" class="btn btn-primary">Yeni Görev Ekle</a>
</div>
