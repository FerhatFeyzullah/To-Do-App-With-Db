@using ToDoAppWithDb.Models

@model ToDo
<head>
    <title>To Do App With Database</title>

</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/JS/JavaScript.js"></script>

<style>
    #div1{
        width:700px;
        margin:auto;
        margin-top: 100px;
    }
    #form1{
        width: 700px;
    }
</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">To Do App With DB</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/Todo/ToDoList">Görevleri Görüntüle</a>
                </li>               
            </ul>
            <span class="navbar-text me-3">
				<b>Hoşgeldin - @Context.Session.GetString("Username")</b>
            </span>
            <a href="/Home/MainPage" type="button" class="btn btn-outline-danger" style="width:70px;">Çıkış</a>
        </div>
    </div>
</nav>



<div id="div1">
        <h4 class="form-label text-center w-100">Yeni Görev</h4> 
    <div class="input-group mb-3">
		<form method="post" id="form1">
			@Html.TextBoxFor(Todo => Todo.Task, new { @class = "form-control", placeholder = "Yeni Görevinini Yaz", aria_label = "Yeni Görevinini Yaz", aria_describedby = "button-addon2" })
            <div class="d-flex justify-content-center" style="margin-top:10px">
				<button class="btn btn-outline-success" type="submit" id="button-addon2" style="width:75px">Ekle</button>
            </div>
            @if (ViewBag.LoginError != null)
            {
                <div class="alert alert-danger" style="width=50px;">
                    <div>@ViewBag.LoginError</div>
                </div>
            }
			
		</form>
    </div>
</div>
